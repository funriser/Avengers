<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivAvenger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="2:1"/>

        <TextView
            android:id="@+id/tvAvengerAlias"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginS"
            android:layout_marginStart="@dimen/marginS"
            app:layout_constraintTop_toBottomOf="@id/ivAvenger"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tvAvengerName"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginS"
            android:layout_marginBottom="@dimen/marginM"
            android:layout_marginStart="@dimen/marginS"
            app:layout_constraintTop_toBottomOf="@id/tvAvengerAlias"
            app:layout_constraintLeft_toLeftOf="@id/tvAvengerAlias"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>